{
  "name": "eleventy-starter-fireblog",
  "version": "1.0.0",
  "description": "eleventy starter blog for fireblog",
  "keywords": [],
  "license": "ISC",
  "author": "Bertrand Keller",
  "main": "index.js",
  "scripts": {
    "postcss": "postcss assets/css/styles.css -o _site/assets/css/styles.css",
    "css:build": "node-sass --output-style compressed --include-path scss _assets/scss/main.scss assets/css/styles.css",
    "css:watch": "chokidar '_assets/scss/**/*.scss' --command 'npm run css:build'",
    "eleventy:build": "npx @11ty/eleventy",
    "eleventy:watch": "npx @11ty/eleventy --serve",
    "build": "NODE_ENV=production npm-run-all --sequential css:build eleventy:build postcss",
    "watch": "ELEVENTY_ENV=development npm-run-all -p css:watch eleventy:watch"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Safari versions",
    "last 1 Edge versions"
  ],
  "dependencies": {
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^9.7.5",
    "bulma": "^0.8.1",
    "chokidar": "^3.3.1",
    "chokidar-cli": "^2.1.0",
    "dotenv": "^8.2.0",
    "html-minifier": "^4.0.0",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.27",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^7.1.0",
    "postcss-preset-env": "^6.7.0"
  }
}
